# OpenAI Configuration
# Required: Your OpenAI API key for GPT-4 access
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Model Configuration (Optional)
# Default model used for XBRL mapping generation
OPENAI_MODEL=gpt-4o

# OpenAI API Settings (Optional)
# Maximum tokens for OpenAI responses
OPENAI_MAX_TOKENS=2000

# Temperature for OpenAI responses (0.0 = deterministic, 1.0 = creative)
OPENAI_TEMPERATURE=0.3

# Application Configuration (Optional)
# Maximum file size for uploads in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Maximum number of Excel columns to process (default: 50)
MAX_COLUMNS=50

# Enable debug mode for development (Optional)
DEBUG_MODE=false

# Session timeout in minutes (Optional)
SESSION_TIMEOUT=60

# Allowed file types (Optional)
ALLOWED_FILE_TYPES=.xlsx,.xls

# Database Configuration (Optional - for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/xbrl_tool

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Logging Configuration (Optional)
LOG_LEVEL=info

# XBRL Taxonomy Configuration (Optional)
# Default namespace for XBRL tags
DEFAULT_XBRL_NAMESPACE=ifrs-full

# API Rate Limiting (Optional)
# Requests per minute for OpenAI API
OPENAI_RATE_LIMIT=60

# Security Configuration (Optional)
# Secret key for session encryption
NEXTAUTH_SECRET=your-secret-key-here

# Application URL (Optional)
NEXTAUTH_URL=http://localhost:3000

# Feature Flags (Optional)
ENABLE_REGENERATE_MAPPING=true
ENABLE_EXPORT_MAPPING=true
ENABLE_MAPPING_VALIDATION=true